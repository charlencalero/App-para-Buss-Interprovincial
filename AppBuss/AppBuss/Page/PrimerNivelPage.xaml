                    <Button x:Name="a8"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a8_Clicked"></Button>
                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button x:Name="a9"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a9_Clicked"></Button>
                    <Button x:Name="a10"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a10_Clicked"></Button>
                    <Image  Source="piso.png" WidthRequest="50"  />
                    <Button x:Name="a11"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a11_Clicked"></Button>
                    <Button x:Name="a12"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a12_Clicked"></Button>
            
