                    <Image  Source="piso.png" WidthRequest="50"  />
                    <Button x:Name="a15"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a15_Clicked"></Button>
                    <Button x:Name="a16"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a16_Clicked"></Button>
                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Image Source="back.png"  HorizontalOptions="FillAndExpand" />
                </StackLayout>
            </StackLayout>

        </ScrollView>
    </ContentPage.Content>

</ContentPage>