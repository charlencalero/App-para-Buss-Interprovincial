                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">

                    <Button x:Name="a1"  Style="{StaticResource BotonPasajero}"  Image="AsieLibre.png" Clicked="a1_Clicked"></Button>
                    <Button x:Name="a2"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a2_Clicked"></Button>
                  
                    <Image  Source="piso.png" WidthRequest="50"  />
                    
