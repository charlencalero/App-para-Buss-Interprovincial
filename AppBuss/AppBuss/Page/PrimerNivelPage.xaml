                    <Button x:Name="a4"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a4_Clicked"></Button>
                    
                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                    <Button x:Name="a5"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a5_Clicked"></Button>
                    <Button x:Name="a6"  Style="{StaticResource BotonPasajero}" Image="AsieLibre.png" Clicked="a6_Clicked"></Button>
                    <Image  Source="piso.png" WidthRequest="50"  />
